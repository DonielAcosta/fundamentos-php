#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use App\FakerAiService;
use App\OllamaAiService;
// $fakerAiService = new FakerAiService();
// $ollamaAiService = new OllamaAiService();

$openAiService = new OpenAiService();
echo 'Ask anything to AI' . PHP_EOL;

while(true){
    $input = readline('> ');

    if($input === 'exit' || $input === ''){
        break;
    }

    $response = $openAiService->generateResponse($input);
    echo $response . PHP_EOL;
}